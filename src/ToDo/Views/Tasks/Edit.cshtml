@model ToDo.ViewModels.Tasks.Edit

@{
    ViewData["Title"] = Model.Task.Id != null ? "Edit Task" : "Create Task";
}

@section Actions {
    <button type="submit" form="task-edit-form"><i class="fas fa-clipboard-check"></i>Save</button>
}

@section Scripts {
    <script data-main="views/tasks/edit" src="~/requirejs/require.js"></script>
}

<form id="task-edit-form" asp-action="SubmitEdits" asp-route-id="@Model.Task.Id" method="post">
    <div class="group">
        <label>Name</label>
        <input asp-for="Task.Name" type="text" />
    </div>
    <div class="group">
        <label>Description</label>
        <textarea asp-for="Task.Description"></textarea>
    </div>
    <div class="group">
        <label>Due date</label>
        <input asp-for="Task.DueDate" type="date" />
    </div>
</form>
